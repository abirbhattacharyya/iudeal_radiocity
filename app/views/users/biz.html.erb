<h1>Sign in</h1>
<div class="columns">
    <div class="column wide">
      <%#= error_messages_for(:user, :order => [:email, :password], :message => "", :header_message => "")%>
      <%=form_for :user, :url => biz_path, :html => {:id => "submit_form"} do |f| %>
        <p class="control">
            <%= label_tag(:email, "Email") %>
            <%= f.text_field :email, :class => "w250px" %>
        </p>
        <p class="control">
            <%= label_tag(:password, "Password") %>
            <%= f.password_field :password, :class => "w250px" %>
        </p>
        <p class="control">
          <%= content_tag :p, @message, :style => "color:red;" if @message %>
          <%= f.submit("Go!", :style => "display:none;") %>
          <%= link_to("Go!", {}, :class => "button-short green", :onclick => "var f = document.forms['submit_form'];f.submit();return false;") %>
          <%= link_to "Forgot Password?", forgot_path, :class => "alter-link" %>
        </p>
      <% end %>
    </div><!-- .column.wide -->
</div><!-- .columns -->
